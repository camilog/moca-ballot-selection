<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="three_part_vote.ballotSelection" >

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher2"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
        <activity
            android:name="three_part_vote.ballotSelection.DisplayCandidatesActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="three_part_vote.ballotSelection.BallotConfirmationActivity"
            android:label="@string/title_activity_ballot_confirmation" >
        </activity>
        <activity
            android:name="three_part_vote.ballotSelection.GenerateQRCodeActivity"
            android:label="@string/title_activity_generate_qrcode" >
        </activity>
        <activity
            android:name="three_part_vote.ballotSelection.ShowEncryptedBallotQRActivity"
            android:label="@string/title_activity_show_qr" >
        </activity>
    </application>

</manifest>
