<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="three_part_vote.ballotselection" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".CandidatesActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BallotConfirmationActivity"
            android:label="@string/title_activity_ballot_confirmation" >
        </activity>
        <activity
            android:name=".GenerateQRCodeActivity"
            android:label="@string/title_activity_generate_qrcode" >
        </activity>
        <activity
            android:name=".ReadKeyToSign"
            android:label="@string/title_activity_read_key_to_sign" >
        </activity>
    </application>

</manifest>
